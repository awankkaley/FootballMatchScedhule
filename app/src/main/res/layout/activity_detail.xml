>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                tools:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_away"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/img_away_detail"
                app:layout_constraintStart_toStartOf="@+id/img_away_detail"
                app:layout_constraintEnd_toEndOf="@+id/img_away_detail"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/tv_date_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                tools:text="20 Oktober 2018"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" android:textStyle="bold"/>


        <ImageView
                android:id="@+id/img_home_detail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="@+id/tv_date_detail"
                tools:ignore="ContentDescription" android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_details"/>
        <TextView
                android:id="@+id/tv_home_score_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="2"
                android:layout_gravity="center"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@+id/tv_away_score_detail"
                app:layout_constraintStart_toEndOf="@+id/img_home_detail"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="@string/vs"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/tv_away_score_detail"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_score_detail"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                app:layout_constraintStart_toEndOf="@+id/tv_home_score_detail"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"/>
        <TextView
                android:id="@+id/tv_away_score_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="5"
                android:gravity="start"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toTopOf="@+id/img_away_detail"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toStartOf="@+id/img_away_detail"
                android:layout_marginRight="20dp"/>
        <ImageView
                android:id="@+id/img_away_detail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_date_detail"
                app:layout_constraintTop_toTopOf="@+id/img_home_detail"
                tools:ignore="ContentDescription"/>


        <TextView
                android:id="@+id/tv_home_goal_details"
                android:layout_height="wrap_content"
                android:layout_width="119dp"
                tools:text="10' Wesley Hoedt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/divider3"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/goal"
                android:id="@+id/textView2"
                app:layout_constraintStart_toEndOf="@+id/tv_home_goal_details"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_goal_details"
                android:layout_marginRight="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_home_goal_details"/>
        <TextView
                android:id="@+id/tv_away_goal_details"
                android:layout_height="wrap_content"
                android:layout_width="119dp"
                tools:text="10' Wesley Hoedt"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2"/>

        <TextView
                android:id="@+id/tv_home_shoot_detail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="4"
                app:layout_constraintStart_toStartOf="@+id/tv_home_goal_details"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_goal_details"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/shots"
                app:layout_constraintTop_toTopOf="@+id/tv_home_shoot_detail"
                android:id="@+id/textView3"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_shoot_detail"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_home_shoot_detail"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"/>
        <TextView
                android:id="@+id/tv_away_shoot_detail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="1"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="@+id/tv_away_goal_details"
                app:layout_constraintTop_toTopOf="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lineups"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                android:id="@+id/textView5"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_home_gk_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alisson Becker"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
        />
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/goal_keeper"
                android:id="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_gk_details"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                app:layout_constraintStart_toEndOf="@+id/tv_home_gk_details"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_home_gk_details"/>
        <TextView
                android:id="@+id/tv_away_gk_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alex"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"/>

        <TextView
                android:id="@+id/tv_home_def_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alisson Becker"
                app:layout_constraintStart_toStartOf="@+id/tv_home_gk_details"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_gk_details"
        />
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/defense"
                android:id="@+id/textView6"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_def_details"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                app:layout_constraintStart_toEndOf="@+id/tv_home_def_details"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_home_def_details"/>
        <TextView
                android:id="@+id/tv_away_def_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alex"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="@+id/tv_away_gk_details"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView6"/>

        <TextView
                android:id="@+id/tv_home_mid_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alisson Becker"
                app:layout_constraintStart_toStartOf="@+id/tv_home_def_details"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_def_details"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/midfield"
                android:id="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/tv_home_mid_details"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_mid_details"
                android:layout_marginRight="17dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_home_mid_details"/>
        <TextView
                android:id="@+id/tv_away_mid_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alex"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="@+id/tv_away_def_details"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView7"/>

        <TextView
                android:id="@+id/tv_home_for_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alisson Becker"
                app:layout_constraintStart_toStartOf="@+id/tv_home_mid_details"
                android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/barrier3"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/forward"
                android:id="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/tv_home_for_details"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_for_details"
                android:layout_marginRight="17dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_home_for_details"/>
        <TextView
                android:id="@+id/tv_away_for_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alex"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="@+id/tv_away_mid_details"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView8"/>

        <TextView
                android:id="@+id/tv_home_sub_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alisson Becker"
                app:layout_constraintStart_toStartOf="@+id/tv_home_for_details"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_for_details"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/substitutes"
                android:id="@+id/textView9"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_away_sub_details"
                android:layout_marginRight="17dp"
                app:layout_constraintStart_toEndOf="@+id/tv_home_sub_details"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_home_sub_details"/>
        <TextView
                android:id="@+id/tv_away_sub_details"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                tools:text="Alex"
                android:textAlignment="textEnd"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="@+id/tv_away_for_details"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"/>
        <View
                android:id="@+id/divider"
                android:layout_width="348dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier3"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textView7,tv_home_mid_details,tv_away_mid_details"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="299dp"/>

        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier4"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textView8,tv_home_for_details,tv_away_for_details"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="347dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="383dp"
                android:layout_marginRight="383dp"/>
        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier5"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="textView6,tv_home_def_details,tv_away_def_details"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="287dp"/>
        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier6"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tv_away_gk_details,textView4,tv_home_gk_details"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="238dp"/>
        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier7"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tv_home_goal_details,textView2,tv_away_goal_details"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="132dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="383dp"
                android:layout_marginRight="383dp"
                android:layout_marginBottom="378dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.39999998"/>
        <TextView
                tools:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_home"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/img_home_detail"
                app:layout_constraintStart_toStartOf="@+id/img_home_detail"
                app:layout_constraintEnd_toEndOf="@+id/img_home_detail"
                android:textStyle="bold"
                tools:textColor="@android:color/background_dark"/>
        <View
                android:id="@+id/divider3"
                android:layout_width="348dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_away"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
        <TextView
                android:text="@string/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time_details" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_detail" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
