<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="2dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_master">

    <LinearLayout
            android:background="@drawable/bgplayer"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/image_player_list"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"/>
        <TextView
                android:id="@+id/name_player_list"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                tools:text="Nama Player"
                android:maxLines="1"
                android:layout_marginTop="@dimen/margin_master"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/pos_player_list"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                tools:text="Position"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v7.widget.CardView>