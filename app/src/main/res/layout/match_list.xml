<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
            android:background="@drawable/bgmatch"
            android:layout_width="match_parent"
            android:layout_height="110dp">
        <TextView
                android:id="@+id/tv_date_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/darker_gray"
                tools:text="20 Oktober 2018"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_time_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/darker_gray"
                tools:text="20:00"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_list" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>

        <TextView
                android:id="@+id/tv_home_list"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                tools:text="Arsenal"
                android:maxLines="1"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_score_list" android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_score_list" android:layout_marginRight="20dp"/>
        <TextView
                android:id="@+id/tv_home_score_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                tools:text="2"
                android:gravity="end"
                app:layout_constraintBottom_toBottomOf="@+id/textView12" android:layout_marginEnd="13dp"
                app:layout_constraintEnd_toStartOf="@+id/textView12" android:layout_marginRight="13dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="@string/vs"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_list"
                app:layout_constraintEnd_toEndOf="@+id/tv_time_list"
                app:layout_constraintStart_toStartOf="@+id/tv_time_list" android:id="@+id/textView12"/>
        <TextView
                android:id="@+id/tv_away_score_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                tools:text="5"
                android:gravity="start"
                app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"/>
        <TextView
                android:id="@+id/tv_away_list"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Everton"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/tv_away_score_list"
                app:layout_constraintStart_toEndOf="@+id/tv_away_score_list" android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
        />
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:button="@drawable/selector_notif"
                android:id="@+id/checkbox_notif"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="55dp"
                android:id="@+id/guideline2"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>